<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.DetailAplikasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_detailapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apa itu Voluschool"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_descrip_detailapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:text="@string/example_detail_app"/>

    <TextView
        android:id="@+id/tv_fun_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:text="Voluschool untuk apa aja?"/>

    <GridLayout
        android:id="@+id/gl_feature_detail"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="16dp"
        android:columnCount="2"
        android:rowCount="4">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/iv_img_fit1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_fit1"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_fit1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center_vertical"
            android:text="@string/string_fitur1"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/iv_img_fit2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_fit2"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_fit2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center_vertical"
            android:text="@string/string_fit2"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/iv_img_fit3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_fit3"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_fit3"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center_vertical"
            android:text="@string/string_fit3"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/iv_img_fit4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_fit4"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_fit4"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center_vertical"
            android:text="@string/string_fit4"/>
    </GridLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>