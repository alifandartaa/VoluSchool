<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img_volunteer"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="25dp"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/iv_img_volunteer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/img_sd_mburing"
                android:contentDescription="@string/image_cardview_volunteer" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_school_volunteer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat"
            android:layout_below="@id/cv_img_volunteer"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            tools:text="@string/school_name" />

        <TextView
            android:id="@+id/tv_volu_penuh"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFF"
            android:background="@color/primaryOrange"
            android:text="@string/tutup"
            android:layout_below="@id/tv_school_volunteer"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:visibility="gone"
            android:fontFamily="@font/montserrat"
            android:gravity="center"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>