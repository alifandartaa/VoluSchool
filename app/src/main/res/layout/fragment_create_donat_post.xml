<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.CreateDonatPostFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_sekolah"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/primaryOrange"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_crname_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deskripsi_sekolah"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/primaryOrange"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_crdesc_school"
            android:layout_width="match_parent"
            android:lines="3"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:importantForAutofill="no"
            android:scrollbars="vertical"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fasilitas_yang_dibutuhkan"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/primaryOrange"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_crfac_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:importantForAutofill="no"
            android:lines="2"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_dana"
            android:textColor="@color/primaryOrange"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_crcost_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="number"
            tools:ignore="Autofill,LabelFor" />

        <Button
            android:id="@+id/btn_upimg_don"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="200dp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/bg_btn_style"
            android:textColor="#FFFF"
            android:textSize="16sp"
            android:text="@string/upload" />

        <ImageView
            android:id="@+id/iv_img_scdonate"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_school_create_post"
            android:src="@color/primaryOrange" />

        <Button
            android:id="@+id/btn_create_donat"
            android:background="@drawable/bg_btn_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/buat_donasi"
            android:textSize="16sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/montserrat"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>