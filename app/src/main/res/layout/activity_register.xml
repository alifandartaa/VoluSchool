<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_screen"
    tools:context=".activities.RegisterActivity">


    <TextView
        android:id="@+id/tv_title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/daftar"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:layout_gravity="center_horizontal" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="40dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_nama_lengkap_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/nama_lengkap"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat" />

            <EditText
                android:id="@+id/et_nama_lengkap_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center_horizontal"
                android:inputType="textPersonName"
                tools:ignore="Autofill,LabelFor"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/tv_email_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/string_email_login"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center_horizontal"
                android:inputType="textEmailAddress"
                tools:ignore="Autofill,LabelFor"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/tv_password_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/password"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            app:passwordToggleEnabled="true"
            android:layout_gravity="center_horizontal"
            tools:targetApi="o">

            <EditText
                android:id="@+id/et_password_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                tools:ignore="Autofill,LabelFor"
                tools:targetApi="o" />

        </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_conpass_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:passwordToggleEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            android:layout_gravity="center_horizontal"
            tools:targetApi="o">

            <EditText
                android:id="@+id/et_conpass_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                tools:ignore="Autofill,LabelFor"
                tools:targetApi="o" />

        </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_nohp_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nomor_hp"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_nohp_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_gravity="center_horizontal"
                android:inputType="number"
                tools:ignore="Autofill,LabelFor"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/tv_noktp_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/nomor_ktp"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/montserrat"
                android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_gravity="center_horizontal"
            tools:targetApi="o">
            <EditText
                android:id="@+id/et_noktp_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                tools:ignore="Autofill,LabelFor"
                tools:targetApi="o" />
        </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btn_upload_ktp_reg"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp"
                android:textSize="16sp"
                android:text="@string/upload_ktp"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_btn_style"
                android:textColor="#FFFF"
                tools:targetApi="o" />



    <Button
        android:id="@+id/btn_submit_register"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/register"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:textColor="#FFFF"
        android:background="@drawable/bg_btn_style"
        android:shadowColor="#41ff4800"
        android:shadowDx="0"
        android:shadowDy="8"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>

    </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>